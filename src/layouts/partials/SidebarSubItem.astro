---
import type { SidebarNavItem } from "@/lib/components/types";
import Fa from 'svelte-fa';
interface Props {
  subItems: SidebarNavItem[];
}

const { subItems } = Astro.props;
---

{
    subItems?.map((item) => {
      return (
        <li class="hs-accordion" id={item.title + "-accordion-sub-1"}>
          <a href={item.href}
            type="button"
            class="hs-accordion-toggle hover:bg-gray-200 hover:underline hover:underline-offset-2 w-full text-start flex items-center gap-x-3.5 py-2 px-2.5 text-xs text-gray-800 rounded-lg "
            aria-expanded="true"
            aria-controls={item.title + "-accordion-sub-1-child"}
          >
          <div class="flex text-sm flex-row ">
            {item.icon && <Fa icon={item.icon} class="mr-2 mt-2 h-5 w-5" />}
            <span class="py-1">{item.title}</span>
          </div>
          </a>
        </li>
      );
    })
}
